#include<iostream>
#include<fstream>
using namespace std;
int main()
{
    string s;
    //file open using constructor 
    fstream fout("C://vs code/text.txt/college.txt",ios::app); // open append mode its mening write mode but not destroy previous date
    cout<<"Enter the colleges name: "<<flush;
    getline(cin,s);
    fout<<s; //writing college inside the file 
    fout.close(); // closing the file 
    cout<<"file created ....."<<endl;
}
